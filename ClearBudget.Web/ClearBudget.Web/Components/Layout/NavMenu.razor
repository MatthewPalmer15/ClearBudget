@using MudBlazor
@code {
    [Parameter] public EventCallback OnItemClick { get; set; }

    private async Task HandleClick()
    {
        if (OnItemClick.HasDelegate)
        {
            await OnItemClick.InvokeAsync(null);
        }
    }
}

<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home" @onclick="HandleClick">
        Home
    </MudNavLink>
    <MudNavLink Href="counter" Icon="@Icons.Material.Filled.AddBox" @onclick="HandleClick">
        Counter
    </MudNavLink>
    <MudNavLink Href="weather" Icon="@Icons.Material.Filled.Cloud" @onclick="HandleClick">
        Weather
    </MudNavLink>
</MudNavMenu>
