@page "/login"
@rendermode InteractiveServer
@inherits CustomServerComponent

<div class="flex justify-center items-center min-h-screen bg-gray-100">
    <MudPaper Class="w-full max-w-md p-10 rounded-3xl shadow-xl bg-white">
        <MudStack Spacing="4">
            <!-- Header -->
            <MudText Typo="Typo.h3" Align="Align.Center" Class="font-bold text-gray-800">
                Login
            </MudText>
            <MudText Typo="Typo.subtitle1" Align="Align.Center" Class="text-gray-500">
                Enter your credentials to continue
            </MudText>

            <!-- Login Form -->
            <EditForm Model="@_model" OnValidSubmit="OnLoginFormSubmit" FormName="LoginForm">
                <DataAnnotationsValidator />

                <MudStack Spacing="3" Class="mt-4">
                    <MudTextField @bind-Value="_model.EmailAddress"
                                  Label="Email Address"
                                  For="@(() => _model.EmailAddress)"
                                  Required="true"
                                  RequiredError="Email is required"
                                  Variant="Variant.Outlined"
                                  FullWidth="true"
                                  Margin="Margin.Dense" />

                    <MudTextField @bind-Value="_model.Password"
                                  Label="Password"
                                  InputType="InputType.Password"
                                  For="@(() => _model.Password)"
                                  Required="true"
                                  RequiredError="Password is required"
                                  Variant="Variant.Outlined"
                                  FullWidth="true"
                                  Margin="Margin.Dense" />
                </MudStack>

                <!-- Submit Button -->
                <MudStack Spacing="2" Class="mt-6">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               ButtonType="ButtonType.Submit"
                               FullWidth="true"
                               Size="Size.Large"
                               Class="hover:bg-blue-700 transition-colors">
                        Login
                    </MudButton>

                    <MudText Typo="Typo.body2" Align="Align.Center" Class="text-gray-500 mt-1">
                        Don’t have an account?
                        <MudLink Href="/register" Color="Color.Primary" Class="font-medium">Register</MudLink>
                    </MudText>
                </MudStack>
            </EditForm>
        </MudStack>
    </MudPaper>
</div>
